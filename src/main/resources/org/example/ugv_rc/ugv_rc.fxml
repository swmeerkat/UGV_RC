<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox styleClass="panel" xmlns:fx="http://javafx.com/fxml"
  fx:controller="org.example.ugv_rc.RcController">
  <stylesheets>
    <URL value="@ugv_rc.css"/>
  </stylesheets>

  <BorderPane styleClass="camera-section">
    <center>
      <ImageView fx:id="imageView"/>
    </center>
  </BorderPane>

  <HBox styleClass="parameter-row">
    <VBox styleClass="parameter">
      <TextField fx:id="bf_roll" editable="false"/>
      <Label text="ROLL"/>
    </VBox>
    <VBox styleClass="parameter">
      <TextField fx:id="bf_pitch" editable="false"/>
      <Label text="PITCH"/>
    </VBox>
    <VBox styleClass="parameter">
      <TextField fx:id="bf_yaw" editable="false"/>
      <Label text="YAW"/>
    </VBox>
    <VBox styleClass="parameter">
      <TextField fx:id="bf_voltage" editable="false"/>
      <Label text="VOLTAGE"/>
    </VBox>
  </HBox>

  <HBox styleClass="button-row">
    <Button text="Base feedback" onAction="#getBaseFeedback"/>
    <Button text="IMU data" onAction="#getImuData"/>
    <Button fx:id="cameraButton" text="Camera start" onAction="#switchCamera"/>
    <Button text="Keyboard control" onAction="#enterKeyboardControl"
      onKeyPressed="#keyPressed" onKeyReleased="#keyReleased"/>
  </HBox>

  <TextArea fx:id="console" editable="false"/>
</VBox>
